<section class="add-task">
    <form action="/add" method="POST">
        <input type="text" name="title" placeholder="Add task..." required>
        <button type="submit">Add task</button>
    </form>
</section>

<section class="task-list">
    <section class="task-filters">
    <a href="/" class="{{#if (equals filter 'all')}} active {{/if}}">All</a> |
    <a href="/?filter=active" class="{{#if (equals filter 'active')}} active {{/if}}" >Active</a> |
    <a href="/?filter=completed" class="{{#if (equals filter 'completed')}} active {{/if}}" >Completed</a>
    </section>

        {{#if hasTasks}}
        {{#each tasks}}
    <ul>
     
        <li>
            <form action="/toggle" method="POST">
                <input type="hidden" name="id" value="{{this.id}}">
                <input type="checkbox" name="completed" onchange="this.form.submit()" {{#if this.completed}} checked {{/if}}/>
                <span class="{{#if this.completed}} completed {{/if}}">{{this.title}}</span>
            </form>
            <form action="/delete" method="POST" style="display:inline;">
                <input type="hidden" name="id" value="{{this.id}}">
                <button type="submit">Delete</button>
            </form>
        </li>
    </ul>
        {{/each}}
          {{else}}
         <p> No tasks yet! Start by adding one !</p>
        {{/if}}
</section>
